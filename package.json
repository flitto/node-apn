{
	"name": "@flitto/node-apn",
	"description": "An interface to the Apple Push Notification service for Node.js by Flitto",
	"version": "4.1.0",
	"author": "Flitto",
	"keywords": [
		"apple",
		"push",
		"push notifications",
		"iOS",
		"apns",
		"notifications",
		"flitto"
	],
	"main": "index.js",
	"types": "index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/flitto/node-apn.git"
	},
	"dependencies": {
		"jsonwebtoken": "^9.0.2",
		"node-forge": "^1.3.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.30",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "29.7.0",
		"prettier": "^3.2.5",
		"semantic-release": "23.0.6"
	},
	"scripts": {
		"test": "node_modules/.bin/jest",
		"format": "prettier --check --ignore-path .gitignore .",
		"format:fix": "prettier --write --ignore-path .gitignore ."
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"coveragePathIgnorePatterns": [
			"index.js",
			".mock.js"
		],
		"rootDir": "lib",
		"testRegex": ".*\\.spec\\.js",
		"testEnvironment": "node",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"coverageReporters": [
			"clover",
			"json",
			"lcov",
			"text",
			"cobertura"
		],
		"verbose": true
	},
	"engines": {
		"node": ">=20"
	},
	"license": "MIT"
}
